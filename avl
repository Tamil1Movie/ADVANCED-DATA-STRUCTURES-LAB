#include <iostream>
#include <algorithm>
#include <iomanip>

class AVLTree {
private:
    struct Node {
        int key;
        Node* left;
        Node* right;
        int height;
        Node(int k) : key(k), left(nullptr), right(nullptr), height(1) {}
    };

    Node* root;

    int getHeight(Node* node) {
        return node ? node->height : 0;
    }

    int getBalanceFactor(Node* node) {
        return node ? getHeight(node->left) - getHeight(node->right) : 0;
    }

    void updateHeight(Node* node) {
        if (node)
            node->height = 1 + std::max(getHeight(node->left), getHeight(node->right));
    }

    Node* rotateRight(Node* y) {
        Node* x = y->left;
        Node* T2 = x->right;
        x->right = y;
        y->left = T2;
        updateHeight(y);
        updateHeight(x);
        return x;
    }

    Node* rotateLeft(Node* x) {
        Node* y = x->right;
        Node* T2 = y->left;
        y->left = x;
        x->right = T2;
        updateHeight(x);
        updateHeight(y);
        return y;
    }

    Node* insert(Node* node, int key) {
        if (!node)
            return new Node(key);
        if (key < node->key)
            node->left = insert(node->left, key);
        else if (key > node->key)
            node->right = insert(node->right, key);
        else
            return node;

        updateHeight(node);
        int balance = getBalanceFactor(node);

        if (balance > 1 && key < node->left->key)
            return rotateRight(node);
        if (balance < -1 && key > node->right->key)
            return rotateLeft(node);
        if (balance > 1 && key > node->left->key) {
            node->left = rotateLeft(node->left);
            return rotateRight(node);
        }
        if (balance < -1 && key < node->right->key) {
            node->right = rotateRight(node->right);
            return rotateLeft(node);
        }
        return node;
    }

    void inorder(Node* node) {
        if (node) {
            inorder(node->left);
            std::cout << node->key << " ";
            inorder(node->right);
        }
    }

    void display(Node* node, int space) {
        if (node == nullptr)
            return;

        const int spacing = 5;
        space += spacing;

        display(node->right, space);

        std::cout << std::endl;
        for (int i = spacing; i < space; i++)
            std::cout << " ";
        std::cout << node->key << "\n";

        display(node->left, space);
    }

public:
    AVLTree() : root(nullptr) {}

    void insert(int key) {
        root = insert(root, key);
    }

    void inorderTraversal() {
        inorder(root);
        std::cout << std::endl;
    }

    void displayTree() {
        if (root == nullptr)
            std::cout << "Tree is empty." << std::endl;
        else
            display(root, 0);
    }
};

int main() {
    AVLTree tree;
    int choice, value;

    do {
        std::cout << "\nAVL Tree Operations Menu:\n";
        std::cout << "1. Insert a node\n";
        std::cout << "2. Display in-order traversal\n";
        std::cout << "3. Display tree structure\n";
        std::cout << "4. Exit\n";
        std::cout << "Enter your choice: ";
        std::cin >> choice;

        switch (choice) {
            case 1:
                std::cout << "Enter value to insert: ";
                std::cin >> value;
                tree.insert(value);
                std::cout << "Node inserted.\n";
                break;
            case 2:
                std::cout << "In-order traversal: ";
                tree.inorderTraversal();
                break;
            case 3:
                std::cout << "Tree structure:\n";
                tree.displayTree();
                break;
            case 4:
                std::cout << "Exiting program.\n";
                break;
            default:
                std::cout << "Invalid choice. Please try again.\n";
        }
    } while (choice != 4);

    return 0;
}